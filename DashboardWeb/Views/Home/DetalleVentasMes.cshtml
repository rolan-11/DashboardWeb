@model IEnumerable<DashboardWeb.Models.Venta>

@{
    ViewData["Title"] = "Detalle de Ventas";
}

<div class="container-fluid">

    <!-- Encabezado con Botón Volver -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Detalle de Ventas - Mes @ViewBag.Mes</h1>
        <a asp-action="ReporteVentasPrincipal" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver al Reporte Mensual
        </a>
    </div>

    <!-- Tabla de Tickets -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Listado de Tickets Generados</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nro Ticket (ID)</th>
                            <th>Fecha y Hora</th>
                            <th>Monto Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.IdVenta.ToString("D6")</td> <!-- Formato visual tipo 000123 -->
                                <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-success font-weight-bold">$ @item.Total.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>