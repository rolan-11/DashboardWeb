@model IEnumerable<DashboardWeb.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<div class="container-fluid">

    <!-- Encabezado con Botón Volver -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Productos en esta Categoría</h1>
        <!-- Botón para regresar al nivel anterior (Categorías) -->
        <a asp-action="ReporteProductosPrincipal" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver a Categorías
        </a>
    </div>

    <!-- Tabla de Productos -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-success">Catálogo Disponible</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Nombre del Producto</th>
                            <th>Precio de Venta</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">No hay productos registrados en esta categoría.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>$ @item.Precio.ToString("N2")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>