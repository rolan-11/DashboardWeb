@model IEnumerable<DashboardWeb.Models.Sucursal>

@{
    ViewData["Title"] = "Sucursales";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Sucursales Disponibles</h1>
    <a href="/" class="btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver a Regiones
    </a>
</div>

<div class="row">

    @foreach (var sucursal in Model)
    {
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Sucursal
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @sucursal.Nombre
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-store fa-2x text-gray-300"></i>
                        </div>
                    </div>

                    <div class="mt-3 text-right">
                        <a href="/Home/VerVendedores?idSucursal=@sucursal.IdSucursal" class="btn btn-sm btn-success">
                            Ver Vendedores <i class="fas fa-users"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-warning">
                No hay sucursales cargadas para esta región.
            </div>
        </div>
    }

</div>