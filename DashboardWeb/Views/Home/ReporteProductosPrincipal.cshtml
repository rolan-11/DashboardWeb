@model IEnumerable<DashboardWeb.Models.ReporteCategoriaConteo>

@{
    ViewData["Title"] = "Inventario por Categoría";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Resumen de Inventario</h1>
    <p class="mb-4">Visualiza la distribución de tu catálogo agrupado por categorías.</p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    @item.CategoriaNombre
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @item.CantidadDeProductos Productos
                                </div>
                            </div>
                            <div class="col-auto">
                                <!-- Botón Drill Down: Lleva al detalle de productos -->
                                <a asp-action="DetalleProductosCategoria" asp-route-idCat="@item.CategoriaId" class="btn btn-success btn-circle">
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Dashboard
        </a>
    </div>
</div>